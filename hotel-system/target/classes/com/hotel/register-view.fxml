<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.hotel.RegisterController"
           style="-fx-background-color: linear-gradient(to bottom right, #003580, #0066cc);">

    <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" spacing="15.0"
          style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 20, 0, 0, 10); -fx-padding: 40; -fx-min-width: 400;">
        
        <Label text="Rejestracja" textFill="#003580">
            <font>
                <Font name="Segoe UI Bold" size="24.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </Label>

        <Label text="Imię i Nazwisko"/>
        <TextField fx:id="nameField" promptText="Jan Kowalski" style="-fx-padding: 8;"/>

        <Label text="Email"/>
        <TextField fx:id="emailField" promptText="jan@example.com" style="-fx-padding: 8;"/>

        <Label text="Hasło"/>
        <PasswordField fx:id="passField" promptText="******" style="-fx-padding: 8;"/>

        <Button text="Zarejestruj się" onAction="#onRegisterConfirm" maxWidth="Infinity"
                style="-fx-background-color: #003580; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10;">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Button text="Wróć do logowania" onAction="#onBackClick" maxWidth="Infinity"
                style="-fx-background-color: #eee; -fx-text-fill: #333; -fx-cursor: hand; -fx-padding: 8;">
        </Button>

    </VBox>
</StackPane>