<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.hotel.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #003580, #0066cc);">

    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" 
          style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 20, 0, 0, 10); -fx-padding: 40;">
        
        <Label text="HotelSystem" textFill="#003580">
            <font>
                <Font name="Segoe UI Bold" size="24.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </Label>

        <TextField fx:id="loginField" promptText="Email lub Login" 
                   style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 4; -fx-padding: 8;">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>

        <PasswordField fx:id="passwordField" promptText="Hasło" 
                       style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 4; -fx-padding: 8;">
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
            <font>
                <Font size="14.0"/>
            </font>
        </PasswordField>

        <Button text="Zaloguj się" onAction="#onLoginButtonClick" maxWidth="Infinity"
                style="-fx-background-color: #003580; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10; -fx-border-color: transparent; -fx-border-width: 2;">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Button text="Załóż konto" onAction="#onRegisterButtonClick" maxWidth="Infinity"
                style="-fx-background-color: transparent; -fx-text-fill: #003580; -fx-cursor: hand; -fx-padding: 10; -fx-border-color: transparent; -fx-border-width: 2; -fx-underline: true;">
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </Button>

        <Label text="Admin: admin | Każdy inny: Gość" textFill="#aaaaaa">
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
            <font>
                <Font size="12.0"/>
            </font>
        </Label> 

    </VBox>
</StackPane>